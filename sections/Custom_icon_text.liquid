{% style %}
  #shopify-section-{{ section.id }} .features-bar-wrapper {
    margin-top: {{ section.settings.margin_top_desktop }}px;
    margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    {% if section.settings.section_background_color != blank %}
      background-color: {{ section.settings.section_background_color }};
    {% endif %}
    {% if section.settings.section_background_image %}
      background-image: url('{{ section.settings.section_background_image | img_url: '2000x' }}');
      background-size: {{ section.settings.background_size }};
      background-position: {{ section.settings.background_position }};
      background-repeat: {{ section.settings.background_repeat }};
    {% endif %}
    
    /* CSS Variables for Section-level Typography */
    --top-subheading-font-size: {{ section.settings.top_subheading_font_size }}px;
    --top-subheading-font-size-mobile: {{ section.settings.top_subheading_font_size_mobile }}px;
    --top-heading-font-size: {{ section.settings.top_heading_font_size }}px;
    --top-heading-font-size-mobile: {{ section.settings.top_heading_font_size_mobile }}px;
  }

  @media screen and (max-width: 768px) {
    #shopify-section-{{ section.id }} .features-bar-wrapper {
      margin-top: {{ section.settings.margin_top_mobile }}px;
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }
  
  /* Block-level CSS Variables */
  {% for block in section.blocks %}
    #shopify-section-{{ section.id }} .feature-item-{{ block.id }} {
      --feature-heading-font-size: {{ block.settings.heading_size_desktop }}px;
      --feature-heading-font-size-mobile: {{ block.settings.heading_size_mobile }}px;
      --feature-subheading-font-size: {{ block.settings.subheading_size_desktop }}px;
      --feature-subheading-font-size-mobile: {{ block.settings.subheading_size_mobile }}px;
      --feature-icon-size: {{ block.settings.icon_size_desktop }}px;
      --feature-icon-size-mobile: {{ block.settings.icon_size_mobile }}px;
    }
  {% endfor %}
{% endstyle %}

<div class="features-bar-wrapper" id="features-bar-{{ section.id }}">
  <div class="features-bar-container page-width">
    {% if section.settings.top_subheading != blank or section.settings.top_heading != blank %}
      <div class="top_content">
        {% if section.settings.top_subheading != blank %}
          <p class="features-subheading_top" style="
            color: {{ section.settings.top_subheading_color }};
            text-align: {{ section.settings.top_subheading_alignment }};
            --mobile-subheading-alignment: {{ section.settings.top_subheading_alignment_mobile }};
          ">
            {{ section.settings.top_subheading }}
          </p>
        {% endif %}
        
        {% if section.settings.top_heading != blank %}
          <h2 class="features-heading_top" style="
            color: {{ section.settings.top_heading_color }};
            text-align: {{ section.settings.top_heading_alignment }};
            --mobile-heading-alignment: {{ section.settings.top_heading_alignment_mobile }};
          ">
            {{ section.settings.top_heading }}
          </h2>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="features-grid 
                {% if section.settings.enable_mobile_slider %}mobile-slider-enabled{% endif %}
                columns-{{ section.settings.columns_desktop }}"
         data-columns-tablet="{{ section.settings.columns_tablet }}"
         data-columns-mobile="{{ section.settings.columns_mobile }}">
      
      {% for block in section.blocks %}
        <div class="feature-item feature-item-{{ block.id }}" {{ block.shopify_attributes }}>
          {% if block.settings.feature_link != blank %}
            <a href="{{ block.settings.feature_link }}" class="feature-link">
          {% endif %}
          
          <div class="feature-content text-align-{{ block.settings.text_alignment }}">
            {% if block.settings.icon_image %}
              <div class="feature-icon">
                <img 
                  src="{{ block.settings.icon_image | img_url: '200x' }}"
                  alt="{{ block.settings.heading | escape }}"
                  loading="lazy"
                >
              </div>
            {% elsif block.settings.icon_svg != blank %}
              <div class="feature-icon feature-icon--svg" style="
                color: {{ block.settings.icon_color }};
              ">
                {{ block.settings.icon_svg }}
              </div>
            {% endif %}
            
            {% if block.settings.heading != blank %}
              <h3 class="feature-heading" style="
                color: {{ block.settings.heading_color }};
                font-weight: {{ block.settings.heading_weight }};
                letter-spacing: {{ block.settings.heading_letter_spacing }}px;
                line-height: {{ block.settings.heading_line_height }};
                text-transform: {{ block.settings.heading_transform }};
                margin-bottom: {{ block.settings.heading_margin_bottom }}px;
              ">
                {{ block.settings.heading }}
              </h3>
            {% endif %}
            
            {% if block.settings.subheading != blank %}
              <div class="feature-subheading" style="
                color: {{ block.settings.subheading_color }};
                font-weight: {{ block.settings.subheading_weight }};
                letter-spacing: {{ block.settings.subheading_letter_spacing }}px;
                line-height: {{ block.settings.subheading_line_height }};
              ">
                {{ block.settings.subheading }}
              </div>
            {% endif %}
          </div>
          
          {% if block.settings.feature_link != blank %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    
    {% if section.settings.enable_mobile_slider and section.blocks.size > 1 %}
      <div class="slider-controls mobile-only">
        <button class="slider-nav slider-nav--prev" type="button" aria-label="Previous">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        
        <div class="slider-dots"></div>
        
        <button class="slider-nav slider-nav--next" type="button" aria-label="Next">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</div>

{% if section.settings.enable_mobile_slider %}
<script>
  (function() {
    const wrapper = document.getElementById('features-bar-{{ section.id }}');
    const grid = wrapper.querySelector('.features-grid');
    const items = wrapper.querySelectorAll('.feature-item');
    const prevBtn = wrapper.querySelector('.slider-nav--prev');
    const nextBtn = wrapper.querySelector('.slider-nav--next');
    const dotsContainer = wrapper.querySelector('.slider-dots');
    let currentIndex = 0;
    
    function isMobile() {
      return window.innerWidth <= 768;
    }
    
    if (dotsContainer && items.length > 1) {
      items.forEach((_, index) => {
        const dot = document.createElement('button');
        dot.classList.add('slider-dot');
        if (index === 0) dot.classList.add('active');
        dot.setAttribute('aria-label', `Go to slide ${index + 1}`);
        dot.addEventListener('click', () => goToSlide(index));
        dotsContainer.appendChild(dot);
      });
    }
    
    function updateDots() {
      const dots = wrapper.querySelectorAll('.slider-dot');
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentIndex);
      });
    }
    
    function goToSlide(index) {
      if (!isMobile()) return;
      
      currentIndex = index;
      const scrollAmount = items[0].offsetWidth * currentIndex;
      grid.scrollTo({
        left: scrollAmount,
        behavior: 'smooth'
      });
      updateDots();
    }
    
    function nextSlide() {
      if (!isMobile()) return;
      currentIndex = (currentIndex + 1) % items.length;
      goToSlide(currentIndex);
    }
    
    function prevSlide() {
      if (!isMobile()) return;
      currentIndex = (currentIndex - 1 + items.length) % items.length;
      goToSlide(currentIndex);
    }
    
    if (prevBtn) {
      prevBtn.addEventListener('click', prevSlide);
    }
    
    if (nextBtn) {
      nextBtn.addEventListener('click', nextSlide);
    }
    
    let touchStartX = 0;
    let touchEndX = 0;
    
    grid.addEventListener('touchstart', (e) => {
      if (!isMobile()) return;
      touchStartX = e.changedTouches[0].screenX;
    });
    
    grid.addEventListener('touchend', (e) => {
      if (!isMobile()) return;
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    });
    
    function handleSwipe() {
      if (touchEndX < touchStartX - 50) {
        nextSlide();
      }
      if (touchEndX > touchStartX + 50) {
        prevSlide();
      }
    }
  })();
</script>
{% endif %}

<style>
  .features-bar-wrapper {
    width: 100%;
    position: relative;
  }

  .features-bar-container {
    margin: 0 auto;
  }

  .container-full {
    max-width: 100%;
    padding: 0 20px;
  }

  .container-large {
    max-width: 1400px;
    padding: 0 20px;
  }

  .container-medium {
    max-width: 1200px;
    padding: 0 20px;
  }

  .container-small {
    max-width: 1000px;
    padding: 0 20px;
  }

  .top_content {
    margin-bottom: 30px;
  }
  
  /* Section-level Typography using CSS Variables */
  p.features-subheading_top {
    max-width: 890px;
    margin: 0 auto 15px;
    font-size: var(--top-subheading-font-size);
    font-weight: 400;
    line-height: 1.5;
  }
  
  h2.features-heading_top {
    font-family: 'Cy';
    font-weight: 600;
    margin: 0;
    font-size: var(--top-heading-font-size);
  }

  .features-grid {
    display: grid;
    gap: 30px;
    align-items: start;
  }

  .features-grid.columns-1 {
    grid-template-columns: 1fr;
  }

  .features-grid.columns-2 {
    grid-template-columns: repeat(2, 1fr);
  }

  .features-grid.columns-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  .features-grid.columns-4 {
    grid-template-columns: repeat(4, 1fr);
  }

  .features-grid.columns-5 {
    grid-template-columns: repeat(5, 1fr);
  }

  .features-grid.columns-6 {
    grid-template-columns: repeat(6, 1fr);
  }

  @media screen and (max-width: 1024px) {
    .features-grid[data-columns-tablet="1"] {
      grid-template-columns: 1fr;
    }
    .features-grid[data-columns-tablet="2"] {
      grid-template-columns: repeat(2, 1fr);
    }
    .features-grid[data-columns-tablet="3"] {
      grid-template-columns: repeat(3, 1fr);
    }
    .features-grid[data-columns-tablet="4"] {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media screen and (max-width: 768px) {
    /* Mobile Font Sizes using CSS Variables */
    p.features-subheading_top {
      max-width: 100%;
      font-size: var(--top-subheading-font-size-mobile) !important;
      text-align: var(--mobile-subheading-alignment) !important;
      margin-bottom: 10px;
    }
    
    h2.features-heading_top {
      max-width: 100%;
      font-size: var(--top-heading-font-size-mobile) !important;
      text-align: var(--mobile-heading-alignment) !important;
    }
    
    .features-grid.mobile-slider-enabled {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      gap: 20px;
    }

    .features-grid.mobile-slider-enabled::-webkit-scrollbar {
      display: none;
    }

    .features-grid.mobile-slider-enabled .feature-item {
      flex: 0 0 100%;
      scroll-snap-align: start;
    }

    .features-grid:not(.mobile-slider-enabled)[data-columns-mobile="1"] {
      grid-template-columns: 1fr;
    }
    .features-grid:not(.mobile-slider-enabled)[data-columns-mobile="2"] {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .feature-item {
    position: relative;
  }

  .feature-link {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .feature-link:hover {
    transform: translateY(-5px);
    opacity: 0.9;
  }

  .feature-content {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .feature-content.text-align-left {
    align-items: flex-start;
    text-align: left;
  }

  .feature-content.text-align-center {
    align-items: center;
    text-align: center;
  }

  .feature-content.text-align-right {
    align-items: flex-end;
    text-align: right;
  }

  .feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 10px;
    width: var(--feature-icon-size);
    height: var(--feature-icon-size);
  }

  .feature-icon img {
    display: block;
    object-fit: contain;
    width: 100%;
    height: 100%;
  }

  .feature-icon--svg {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .feature-icon--svg svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  /* Block-level Typography using CSS Variables */
  .feature-heading {
    margin: 0;
    font-size: var(--feature-heading-font-size);
  }

  .feature-subheading {
    margin: 0;
    font-size: var(--feature-subheading-font-size);
  }

  @media screen and (max-width: 768px) {
    .feature-heading {
      font-size: var(--feature-heading-font-size-mobile) !important;
      margin: 0 !important;
    }

    .feature-subheading {
      font-size: var(--feature-subheading-font-size-mobile) !important;
      max-width: 287px;
    }

    .feature-icon {
      width: var(--feature-icon-size-mobile) !important;
      height: var(--feature-icon-size-mobile) !important;
      margin-bottom: 12px;
    }
  }

  /* Slider Controls */
  .slider-controls {
    display: none;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
  }

  @media screen and (max-width: 768px) {
    .mobile-only {
      display: flex;
    }
  }

  .slider-nav {
    background: rgba(0, 0, 0, 0.1);
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: #333;
  }

  .slider-nav:hover {
    background: rgba(0, 0, 0, 0.2);
  }

  .slider-dots {
    display: flex;
    gap: 8px;
  }

  .slider-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.2);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .slider-dot.active {
    background: rgba(0, 0, 0, 0.6);
    transform: scale(1.2);
  }

  @media screen and (max-width: 480px) {
    .features-bar-container {
      padding: 0 15px;
    }

    .features-grid {
      gap: 15px;
    }
  }
</style>

