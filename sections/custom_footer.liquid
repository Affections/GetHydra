<script>
  function toggleFooterMenu(header) {
    const menuItem = header.parentElement;
    const isActive = menuItem.classList.contains('active');

    // Close all menu items
    document.querySelectorAll('.footer-menu-item').forEach(item => {
      item.classList.remove('active');
    });

    // Open clicked item if it wasn't active
    if (!isActive) {
      menuItem.classList.add('active');
    }
  }

  // Keep all menus CLOSED by default (desktop + mobile)
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.footer-menu-item').forEach(item => {
      item.classList.remove('active');
    });
  });

  // Handle resize
  let resizeTimer;
  window.addEventListener('resize', function() {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(function() {
      // Always keep menus closed when resizing
      document.querySelectorAll('.footer-menu-item').forEach(item => {
        item.classList.remove('active');
      });
    }, 250);
  });
</script>

