{% comment %}
  Footer Section - Hydra Style
  Fully responsive with CSS variables for dynamic font sizing
{% endcomment %}

<style>
    :root {
      /* Font Size Variables - Desktop */
      --footer-company-name-size-desktop: {{ section.settings.company_name_font_size_desktop }}px;
      --footer-body-text-size-desktop: {{ section.settings.body_font_size_desktop }}px;
      --footer-menu-title-size-desktop: {{ section.settings.menu_title_font_size_desktop }}px;
      --footer-link-size-desktop: {{ section.settings.link_font_size_desktop }}px;
      --footer-social-icon-size-desktop: {{ section.settings.social_icon_size_desktop }}px;
      
      /* Font Size Variables - Mobile */
      --footer-company-name-size-mobile: {{ section.settings.company_name_font_size_mobile }}px;
      --footer-body-text-size-mobile: {{ section.settings.body_font_size_mobile }}px;
      --footer-menu-title-size-mobile: {{ section.settings.menu_title_font_size_mobile }}px;
      --footer-link-size-mobile: {{ section.settings.link_font_size_mobile }}px;
      --footer-social-icon-size-mobile: {{ section.settings.social_icon_size_mobile }}px;
      
      /* Color Variables */
      --footer-bg-color: {{ section.settings.background_color | default: '#F5E6F0' }};
      --footer-company-name-color: {{ section.settings.company_name_color | default: '#4A0E4E' }};
      --footer-body-text-color: {{ section.settings.body_text_color | default: '#4A0E4E' }};
      --footer-menu-title-color: {{ section.settings.menu_title_color | default: '#4A0E4E' }};
      --footer-link-color: {{ section.settings.link_color | default: '#4A0E4E' }};
      --footer-social-icon-color: {{ section.settings.social_icon_color | default: '#4A0E4E' }};
      
      /* Spacing Variables */
      --footer-margin-top: {{ section.settings.margin_top }}px;
      --footer-margin-bottom: {{ section.settings.margin_bottom }}px;
      --footer-padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
      --footer-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;
      --footer-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
      --footer-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
      
      /* Border & Layout Variables */
      --footer-border-color: #6E197D;
      --footer-border-radius: 16px;
      --footer-gap-desktop: 40px;
      --footer-gap-mobile: 20px;
    }

    #footer-section-{{ section.id }} {
      background-color: var(--footer-bg-color);
      {% if section.settings.background_image %}
        background-image: url('{{ section.settings.background_image | img_url: 'master' }}');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
      {% endif %}
      padding-top: var(--footer-padding-top-desktop);
      padding-bottom: var(--footer-padding-bottom-desktop);
      margin-top: var(--footer-margin-top);
      margin-bottom: var(--footer-margin-bottom);
      border-radius: var(--footer-border-radius) var(--footer-border-radius) 0 0;
    }

    .footer-container {
      margin: 0 auto;
    }

    .footer-main {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: var(--footer-gap-desktop);
      flex-wrap: wrap;
    }

    .footer-left {
      flex: 1;
      min-width: 280px;
      max-width: 650px;
      display: flex;
      flex-direction: column;
      align-content: flex-start;
      gap: 13px;
      margin-top: 7px;
    }

    .footer-company-name {
      font-size: var(--footer-company-name-size-desktop);
      color: var(--footer-company-name-color);
      line-height: 130%;
      font-weight: 500;
      letter-spacing: 0.5px;
    }

    .footer-abn,
    .footer-location {
      font-size: var(--footer-body-text-size-desktop);
      color: var(--footer-body-text-color);
      line-height: 130%;
      font-weight: 500;
    }

    .footer-acknowledgment {
      font-size: var(--footer-body-text-size-desktop);
      color: var(--footer-body-text-color);
      line-height: 1.6;
    }

    .footer-contact {
      font-size: var(--footer-body-text-size-desktop);
      color: var(--footer-link-color);
      text-decoration: none;
      display: inline-block;
    }

    .footer-contact:hover {
      text-decoration: underline;
    }

    .footer-logo {
      margin-top: 8px;
    }

    .footer-logo img {
      height: auto;
      width: 150px;
    }

    .footer-right {
      flex: 1;
      min-width: 280px;
      max-width: 500px;
    }

    .footer-menu-item {
      border-bottom: 1px solid var(--footer-border-color);
      margin-bottom: 0;
    }

    .footer-menu-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 0;
      cursor: pointer;
      user-select: none;
    }

    .footer-menu-title {
      font-size: var(--footer-menu-title-size-desktop);
      color: var(--footer-menu-title-color);
      font-weight: 700;
      line-height: 125%;
      margin: 0;
    }

    .footer-menu-arrow {
      color: var(--footer-menu-title-color);
      font-size: 20px;
      transition: transform 0.3s ease;
    }

    .footer-menu-item.active .footer-menu-arrow {
      transform: rotate(90deg);
    }

    .footer-menu-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    .footer-menu-item.active .footer-menu-content {
      max-height: 500px;
      padding-bottom: 20px;
    }

    .footer-menu-links {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .footer-menu-links li {
      margin-bottom: 12px;
    }

    .footer-menu-links a {
      color: var(--footer-link-color);
      text-decoration: none;
      font-size: var(--footer-link-size-desktop);
      line-height: 1.5;
      transition: opacity 0.2s ease;
    }

    .footer-menu-links a:hover {
      opacity: 0.7;
    }

    .footer-social {
      display: flex;
      gap: 30px;
      padding-top: 22px;
      justify-content: space-between;
    }

    .footer-social a {
      color: var(--footer-social-icon-color);
      font-size: var(--footer-social-icon-size-desktop);
      transition: opacity 0.2s ease;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .footer-social a svg {
      width: var(--footer-social-icon-size-desktop);
      height: var(--footer-social-icon-size-desktop);
    }

    .footer-social a:hover {
      opacity: 0.7;
    }

    /* Tablet Styles */
    @media screen and (max-width: 1024px) and (min-width: 768px) {
      :root {
        --footer-company-name-size-desktop: calc({{ section.settings.company_name_font_size_desktop }}px * 0.9);
        --footer-body-text-size-desktop: calc({{ section.settings.body_font_size_desktop }}px * 0.95);
        --footer-menu-title-size-desktop: calc({{ section.settings.menu_title_font_size_desktop }}px * 0.95);
        --footer-link-size-desktop: calc({{ section.settings.link_font_size_desktop }}px * 0.95);
        --footer-social-icon-size-desktop: calc({{ section.settings.social_icon_size_desktop }}px * 0.95);
      }

      .footer-main {
        gap: 30px;
      }
    }

    /* Mobile Styles */
    @media screen and (max-width: 767px) {
      #footer-section-{{ section.id }} {
        padding-top: var(--footer-padding-top-mobile);
        padding-bottom: var(--footer-padding-bottom-mobile);
      }

      .footer-container {
        padding: 0 16px;
      }

      .footer-main {
        flex-direction: column-reverse;
        gap: var(--footer-gap-mobile);
      }

      .footer-left,
      .footer-right {
        max-width: 100%;
        width: 100%;
      }

      .footer-company-name {
        font-size: var(--footer-company-name-size-mobile);
      }

      .footer-abn,
      .footer-location,
      .footer-acknowledgment,
      .footer-contact {
        font-size: var(--footer-body-text-size-mobile);
      }

      .footer-menu-title {
        font-size: var(--footer-menu-title-size-mobile);
      }

      .footer-menu-links a {
        font-size: var(--footer-link-size-mobile);
      }

      .footer-social a {
        font-size: var(--footer-social-icon-size-mobile);
      }

      .footer-social a svg {
        width: var(--footer-social-icon-size-mobile);
        height: var(--footer-social-icon-size-mobile);
      }

      .footer-logo {
        text-align: center;
        overflow: hidden;
      }

      .footer-menu-header {
        padding: 16px 0;
      }
    }

    /* Small Mobile */
    @media screen and (max-width: 480px) {
      .footer-social {
        gap: 20px;
      }
    }
</style>

