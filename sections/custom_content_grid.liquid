{% style %}
  #{% if section.settings.custom_section_id != blank %}{{ section.settings.custom_section_id }}{% else %}content-grid-{{ section.id }}{% endif %} {
    margin-top: {{ section.settings.margin_top_desktop }}px;
    margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    {% if section.settings.section_background_color != blank %}
      background-color: {{ section.settings.section_background_color }};
    {% endif %}
    {% if section.settings.section_background_image %}
      background-image: url('{{ section.settings.section_background_image | img_url: '2000x' }}');
      background-size: {{ section.settings.background_size }};
      background-position: {{ section.settings.background_position }};
      background-repeat: {{ section.settings.background_repeat }};
    {% endif %}
    
    /* CSS Variables for Section-level Typography */
    --section-subheading-font-size: {{ section.settings.subheading_font_size }}px;
    --section-subheading-font-size-mobile: {{ section.settings.subheading_font_size_mobile }}px;
    --section-heading-font-size: {{ section.settings.heading_font_size }}px;
    --section-heading-font-size-mobile: {{ section.settings.heading_font_size_mobile }}px;
    --bottom-button-font-size: {{ section.settings.bottom_button_font_size }}px;
    --bottom-button-font-size-mobile: {{ section.settings.bottom_button_font_size_mobile }}px;
  }

  @media screen and (max-width: 768px) {
    #{% if section.settings.custom_section_id != blank %}{{ section.settings.custom_section_id }}{% else %}content-grid-{{ section.id }}{% endif %} {
      margin-top: {{ section.settings.margin_top_mobile }}px;
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }
  
  /* Block-level CSS Variables */
  {% for block in section.blocks %}
    #{% if section.settings.custom_section_id != blank %}{{ section.settings.custom_section_id }}{% else %}content-grid-{{ section.id }}{% endif %} .grid-item-{{ block.id }} {
      --card-heading-font-size: {{ block.settings.heading_size_desktop }}px;
      --card-heading-font-size-mobile: {{ block.settings.heading_size_mobile }}px;
      --card-subheading-font-size: {{ block.settings.subheading_size_desktop }}px;
      --card-subheading-font-size-mobile: {{ block.settings.subheading_size_mobile }}px;
      --card-button-font-size: {{ block.settings.button_font_size }}px;
    }
  {% endfor %}
{% endstyle %}

<div class="content-grid-wrapper" id="{% if section.settings.custom_section_id != blank %}{{ section.settings.custom_section_id }}{% else %}content-grid-{{ section.id }}{% endif %}">
  <div class="content-grid-container page-width">
    <div class="top_content">
      {% if section.settings.subheading != blank %}
        <p class="card-subheading_top" style="
          color: {{ section.settings.subheading_color }};
          text-align: {{ section.settings.subheading_alignment }};
          --mobile-subheading-alignment: {{ section.settings.subheading_alignment_mobile }};
        ">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
      
      <h3 class="card-heading_top" style="
        color: {{ section.settings.heading_color }};
        text-align: {{ section.settings.heading_alignment }};
        --mobile-heading-alignment: {{ section.settings.heading_alignment_mobile }};
      ">
        {{ section.settings.heading }}
      </h3>
    </div>
    
    <div class="content-grid 
                grid-columns-{{ section.settings.grid_columns_desktop }}
                {% if section.settings.enable_mobile_slider %}mobile-slider-enabled{% endif %}"
         data-columns-tablet="{{ section.settings.grid_columns_tablet }}"
         data-columns-mobile="{{ section.settings.grid_columns_mobile }}"
         data-gap="{{ section.settings.grid_gap }}">
      
    
{% for block in section.blocks %}
  {% liquid
    # Calculate aspect ratio class based on settings
    assign aspect_class = ''
    if block.settings.aspect_ratio == '1-1'
      assign aspect_class = 'aspect-ratio-1-1'
    elsif block.settings.aspect_ratio == '4-3'
      assign aspect_class = 'aspect-ratio-4-3'
    elsif block.settings.aspect_ratio == '3-2'
      assign aspect_class = 'aspect-ratio-3-2'
    elsif block.settings.aspect_ratio == '16-9'
      assign aspect_class = 'aspect-ratio-16-9'
    elsif block.settings.aspect_ratio == '21-9'
      assign aspect_class = 'aspect-ratio-21-9'
    endif
    
    # Mobile aspect ratio
    assign mobile_aspect_class = ''
    if block.settings.mobile_aspect_ratio != 'same'
      assign mobile_aspect_class = 'mobile-' | append: block.settings.mobile_aspect_ratio
    endif
  %}
  
  <div class="grid-item grid-item-{{ block.id }}
              grid-item--{{ block.settings.card_size }}
              {{ aspect_class }}
              {{ mobile_aspect_class }}
              {% if block.settings.card_height == 'custom' %}grid-item--custom-height{% endif %}
              {% if block.settings.maintain_image_aspect %}maintain-aspect{% endif %}"
       style="
         {% if block.settings.card_height == 'custom' or block.settings.aspect_ratio == 'custom' %}
           --card-height-desktop: {{ block.settings.card_height_desktop }}px;
           --card-height-mobile: {{ block.settings.card_height_mobile }}px;
         {% endif %}
       "
       {{ block.shopify_attributes }}>
    
    <div class="grid-card">
      {% comment %} Wrapper link if card is clickable {% endcomment %}
      {% if block.settings.card_link != blank %}
        <a href="{{ block.settings.card_link }}" class="card-link" aria-label="{{ block.settings.heading | escape }}">
      {% endif %}
      
      {% comment %} Image Background Container {% endcomment %}
      <div class="card-background">
        {% comment %} Desktop Image {% endcomment %}
        {% if block.settings.card_image %}
          <img 
            src="{{ block.settings.card_image | img_url: '1200x' }}"
            srcset="
              {{ block.settings.card_image | img_url: '400x' }} 400w,
              {{ block.settings.card_image | img_url: '600x' }} 600w,
              {{ block.settings.card_image | img_url: '800x' }} 800w,
              {{ block.settings.card_image | img_url: '1000x' }} 1000w,
              {{ block.settings.card_image | img_url: '1200x' }} 1200w,
              {{ block.settings.card_image | img_url: '1600x' }} 1600w
            "
            sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
            alt="{{ block.settings.heading | default: 'Card image' | escape }}"
            class="card-image card-image--desktop"
            loading="lazy"
            width="{{ block.settings.card_image.width }}"
            height="{{ block.settings.card_image.height }}"
            onload="this.classList.add('loaded')"
            style="
              object-fit: {{ block.settings.image_fit | default: 'cover' }};
              object-position: {{ block.settings.image_position_x | default: 50 }}% {{ block.settings.image_position_y | default: 50 }}%;
            "
          >
        {% else %}
          {% comment %} Placeholder if no image {% endcomment %}
          <div class="card-image-placeholder">
            <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="60" height="60" fill="#E5E5E5"/>
              <path d="M20 25L25 30L30 25L40 35L45 30L50 35V45H10V25L15 30L20 25Z" fill="#CCCCCC"/>
              <circle cx="35" cy="20" r="5" fill="#CCCCCC"/>
            </svg>
            <p>No Image</p>
          </div>
        {% endif %}
        
        {% comment %} Mobile Image (if provided) {% endcomment %}
        {% if block.settings.card_image_mobile %}
          <img 
            src="{{ block.settings.card_image_mobile | img_url: '800x' }}"
            srcset="
              {{ block.settings.card_image_mobile | img_url: '400x' }} 400w,
              {{ block.settings.card_image_mobile | img_url: '600x' }} 600w,
              {{ block.settings.card_image_mobile | img_url: '800x' }} 800w,
              {{ block.settings.card_image_mobile | img_url: '1000x' }} 1000w
            "
            sizes="100vw"
            alt="{{ block.settings.heading | default: 'Card image' | escape }}"
            class="card-image card-image--mobile"
            loading="lazy"
            width="{{ block.settings.card_image_mobile.width }}"
            height="{{ block.settings.card_image_mobile.height }}"
            onload="this.classList.add('loaded')"
            style="
              object-fit: {{ block.settings.image_fit | default: 'cover' }};
              object-position: {{ block.settings.image_position_x | default: 50 }}% {{ block.settings.image_position_y | default: 50 }}%;
            "
          >
        {% endif %}
        
        {% comment %} Image Overlay {% endcomment %}
        {% if block.settings.overlay_opacity > 0 %}
          <div class="card-overlay" style="
            {% if block.settings.overlay_color != blank %}
              background-color: {{ block.settings.overlay_color }};
            {% else %}
              background-color: rgba(0, 0, 0, 0.3);
            {% endif %}
            opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
          "></div>
        {% endif %}
      </div>
      
      {% comment %} Close link if opened {% endcomment %}
      {% if block.settings.card_link != blank %}
        </a>
      {% endif %}
      
      {% comment %} Card Content Overlay {% endcomment %}
      <div class="card-content 
                  text-align-{{ block.settings.text_alignment_horizontal | default: 'center' }}
                  vertical-align-{{ block.settings.text_alignment_vertical | default: 'middle' }}"
           style="
             max-width: {{ block.settings.content_max_width | default: 100 }}%;
             padding: {{ block.settings.content_padding_top | default: 30 }}px 
                      {{ block.settings.content_padding_right | default: 30 }}px 
                      {{ block.settings.content_padding_bottom | default: 30 }}px 
                      {{ block.settings.content_padding_left | default: 30 }}px;
           ">
        
        {% comment %} Top Subheading {% endcomment %}
        {% if block.settings.subheadingg != blank %}
          <p class="card-subheading_block" style="
            color: {{ block.settings.subheading_color | default: '#ffffff' }};
            text-align: {{ block.settings.text_alignment_horizontal | default: 'center' }};
          ">
            {{ block.settings.subheadingg }}
          </p>
        {% endif %}
        
        {% comment %} Main Heading {% endcomment %}
        {% if block.settings.heading != blank %}
          <h3 class="card-heading" style="
            color: {{ block.settings.heading_color | default: '#ffffff' }};
            font-weight: {{ block.settings.heading_weight | default: 700 }};
            letter-spacing: {{ block.settings.heading_letter_spacing | default: 0 }}px;
            line-height: {{ block.settings.heading_line_height | default: 1.2 }};
            text-transform: {{ block.settings.heading_transform | default: 'none' }};
            margin-bottom: {{ block.settings.heading_margin_bottom | default: 15 }}px;
          ">
            {{ block.settings.heading }}
          </h3>
        {% endif %}
        
        {% comment %} Description/Subheading {% endcomment %}
        {% if block.settings.subheading != blank %}
          <div class="card-subheading" style="
            color: {{ block.settings.subheading_color | default: '#ffffff' }};
            font-weight: {{ block.settings.subheading_weight | default: 400 }};
            letter-spacing: {{ block.settings.subheading_letter_spacing | default: 0 }}px;
            line-height: {{ block.settings.subheading_line_height | default: 1.5 }};
            margin-bottom: {{ block.settings.subheading_margin_bottom | default: 20 }}px;
            {% if block.settings.subheading_text_shadow %}
              text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            {% endif %}
          ">
            {{ block.settings.subheading }}
          </div>
        {% endif %}
        
        {% comment %} Call to Action Button {% endcomment %}
        {% if block.settings.button_text != blank %}
          <a href="{{ block.settings.button_link | default: '#' }}" 
             class="card-button"
             style="
               {% if block.settings.button_bg_color != blank %}
                 background-color: {{ block.settings.button_bg_color }};
               {% else %}
                 background-color: #E30613;
               {% endif %}
               {% if block.settings.button_text_color != blank %}
                 color: {{ block.settings.button_text_color }};
               {% else %}
                 color: #ffffff;
               {% endif %}
               padding: {{ block.settings.button_padding_y | default: 12 }}px {{ block.settings.button_padding_x | default: 30 }}px;
               border-radius: {{ block.settings.button_border_radius | default: 4 }}px;
               font-weight: {{ block.settings.button_font_weight | default: 700 }};
               text-transform: {{ block.settings.button_text_transform | default: 'uppercase' }};
               letter-spacing: {{ block.settings.button_letter_spacing | default: 1 }}px;
               display: inline-block;
               text-decoration: none;
               transition: all 0.3s ease;
             "
             onmouseover="this.style.opacity='0.9'; this.style.transform='translateY(-2px)'"
             onmouseout="this.style.opacity='1'; this.style.transform='translateY(0)'">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
{% endfor %}
    </div>
    
    {% if section.settings.enable_mobile_slider and section.blocks.size > 1 %}
      <div class="slider-controls mobile-only">
        <button class="slider-nav slider-nav--prev" type="button" aria-label="Previous">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        
        <div class="slider-dots"></div>
        
        <button class="slider-nav slider-nav--next" type="button" aria-label="Next">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    {% endif %}
    
    {% if section.settings.bottom_button_text != blank %}
      <div class="bottom_button_wrapper" style="
        text-align: {{ section.settings.bottom_button_alignment }};
        --mobile-button-alignment: {{ section.settings.bottom_button_alignment_mobile }};
      ">
        <a href="{{ section.settings.bottom_button_link }}" 
           class="bottom-button"
           style="
             {% if section.settings.bottom_button_bg_color != blank %}
               background-color: {{ section.settings.bottom_button_bg_color }};
             {% endif %}
             {% if section.settings.bottom_button_text_color != blank %}
               color: {{ section.settings.bottom_button_text_color }};
             {% endif %}
             {% if section.settings.bottom_button_border_color != blank %}
               border: {{ section.settings.bottom_button_border_width }}px solid {{ section.settings.bottom_button_border_color }};
             {% endif %}
             padding: 20px 10px 0 0;
             border-radius: {{ section.settings.bottom_button_border_radius }}px;
             font-weight: {{ section.settings.bottom_button_font_weight }};
             text-transform: {{ section.settings.bottom_button_text_transform }};
             letter-spacing: {{ section.settings.bottom_button_letter_spacing }}px;
             display: flex;
             align-items: center;
             align-content: center;
             gap: 10px;
             text-decoration: none;
           ">
          {{ section.settings.bottom_button_text }}
          {% if section.settings.bottom_button_show_arrow %}
            <svg width="5" height="9" viewBox="0 0 5 9" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.93402e-07 -1.96701e-07L4.5 4.5L0 9L3.93402e-07 -1.96701e-07Z" fill="#0F0546"/>
            </svg>
          {% endif %}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% if section.settings.enable_mobile_slider %}
<script>
  (function() {
    const wrapper = document.getElementById('content-grid-{{ section.id }}');
    const grid = wrapper.querySelector('.content-grid');
    const items = wrapper.querySelectorAll('.grid-item');
    const prevBtn = wrapper.querySelector('.slider-nav--prev');
    const nextBtn = wrapper.querySelector('.slider-nav--next');
    const dotsContainer = wrapper.querySelector('.slider-dots');
    let currentIndex = 0;
    
    function isMobile() {
      return window.innerWidth <= 768;
    }
    
    if (dotsContainer && items.length > 1) {
      items.forEach((_, index) => {
        const dot = document.createElement('button');
        dot.classList.add('slider-dot');
        if (index === 0) dot.classList.add('active');
        dot.setAttribute('aria-label', `Go to slide ${index + 1}`);
        dot.addEventListener('click', () => goToSlide(index));
        dotsContainer.appendChild(dot);
      });
    }
    
    function updateDots() {
      const dots = wrapper.querySelectorAll('.slider-dot');
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentIndex);
      });
    }
    
    function goToSlide(index) {
      if (!isMobile()) return;
      currentIndex = index;
      const scrollAmount = items[0].offsetWidth * currentIndex;
      grid.scrollTo({
        left: scrollAmount,
        behavior: 'smooth'
      });
      updateDots();
    }
    
    function nextSlide() {
      if (!isMobile()) return;
      currentIndex = (currentIndex + 1) % items.length;
      goToSlide(currentIndex);
    }
    
    function prevSlide() {
      if (!isMobile()) return;
      currentIndex = (currentIndex - 1 + items.length) % items.length;
      goToSlide(currentIndex);
    }
    
    if (prevBtn) prevBtn.addEventListener('click', prevSlide);
    if (nextBtn) nextBtn.addEventListener('click', nextSlide);
    
    let touchStartX = 0;
    let touchEndX = 0;
    
    grid.addEventListener('touchstart', (e) => {
      if (!isMobile()) return;
      touchStartX = e.changedTouches[0].screenX;
    });
    
    grid.addEventListener('touchend', (e) => {
      if (!isMobile()) return;
      touchEndX = e.changedTouches[0].screenX;
      if (touchEndX < touchStartX - 50) nextSlide();
      if (touchEndX > touchStartX + 50) prevSlide();
    });
  })();
</script>
{% endif %}

