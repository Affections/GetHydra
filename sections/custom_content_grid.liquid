  .card-heading {
    margin: 0;
    font-size: var(--card-heading-font-size);
  }
  
  .card-subheading {
    margin: 0;
    font-size: var(--card-subheading-font-size);
  }
  
  .card-button {
    font-size: var(--card-button-font-size);
  }
  
